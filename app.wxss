.box-border {
	width: 638rpx;
	height: 957rpx;
	margin: 106rpx auto 0;
	border-radius: 32rpx;
	padding: 18rpx;
	position: relative;
	box-sizing: border-box;
	z-index: -2;
}
.box-bg {
	position: absolute;
	top: 18rpx;
	width: 602rpx;
	height: 950rpx;
	z-index: -1;
	border-radius: 32rpx;
	background-color: #fff;
}
.box-name {
	width: 100%;
	background-color: #3f5ac4;
	text-align: center;
	color: #fff;
	font-size: 40rpx;
	height: 120rpx;
	line-height: 120rpx;
	border-radius: 29rpx 29rpx 0 0;
	z-index: 1;
}

.popup {
	position: fixed;
	z-index: 50;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.7);
	top: 0;
	left: 0;
}
